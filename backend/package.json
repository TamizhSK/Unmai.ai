{
  "name": "verity-backend",
  "version": "1.0.0",
  "description": "Verity AI Backend - AI-powered content verification and analysis",
  "main": "dist/ai/dev.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "dev:genkit": "genkit start -- tsx src/ai/dev.ts",
    "dev:watch": "tsx --watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@genkit-ai/vertexai": "^1.19.2",
    "@google-cloud/speech": "^7.2.0",
    "@google-cloud/translate": "^9.2.0",
    "@google-cloud/vertexai": "^1.10.0",
    "@google-cloud/video-intelligence": "^6.2.0",
    "@google-cloud/vision": "^5.3.3",
    "@google-cloud/web-risk": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "genkit": "^1.19.2",
    "wav": "^1.0.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20",
    "genkit-cli": "^1.19.2",
    "tsx": "^4.7.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
